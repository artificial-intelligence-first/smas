{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["passed", "errors", "warnings", "total_files"],
  "properties": {
    "passed": {"type": "boolean"},
    "errors": {
      "type": "array",
      "items": {"type": "object"}
    },
    "warnings": {
      "type": "array",
      "items": {"type": "object"}
    },
    "total_files": {"type": "integer", "minimum": 0}
  }
}
